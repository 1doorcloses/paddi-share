
<div class="container-fluid">
    <div class="row">    
      <div class="col-sm">
        <h2>All Players</h2>
        <p class="text-muted">
          This page shows all players, regardless of the Organization(s) they belong to.
        </p>
        <br/>
        <%= link_to 'New Player', new_player_path, { :class=>"btn btn-primary" } %>
        <br/><br/>
      </div>
      <div class="col-sm">        
        <%= image_tag "bell.png" %>
      </div>
    </div>
</div>    

<br/>

<table class="table table-striped table-sm">
  <thead>
    <tr>      
      <th>First name</th>
      <th>Last name</th>
      <th>Rating</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% Player.order(:first_name,:last_name).each do |player| %>
      <tr>          
        <td><%= player.first_name %></td>
        <td><%= player.last_name %></td>
        <td><%= player.rating.to_i %></td>        
        <td><%= player.phone  %></td>  
        <td><%= player.email  %></td>  
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Archive', players_path, method: :get, :class=>"btn btn-outline-warning btn-sm", data: { confirm: 'TODO: Archiving moves inactive players out of view. But their ID remains alive as matches may reference it.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

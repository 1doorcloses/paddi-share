<h2><%= @org.name %> &gt; Leagues</h2>
<br/>
<%= link_to 'Add New League', new_org_league_path, { :class=>"btn btn-primary" } %>
<br/><br/>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>      
      <th>Players</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @leagues.each do |league| %>
      <tr>
        <td><%= link_to league.name, org_league_path(@org,league) %></td>                
        <td><%= league.players.count %> players</td>
        <td><%= link_to 'Edit', edit_org_league_path(@org,league) %></td>
        <td><%= link_to 'Destroy', org_league_path(@org,league), method: :delete, :class=>"btn btn-outline-danger btn-sm", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



&lt;&lt; <%= link_to 'Back', org_league_path(@org,@league) %>
<br/>
<h3>Add Player to <%= @org.name %> &gt; <%= @league.name %></h3>


<br/><br/>

<%= form_tag assign_org_league_path(@org,@league) do %>

	<select class="selectpicker" data-live-search="true" name="player_id" data-style="btn-info">
    <option value="-1">Choose Player...</option>
    <% Player.order(:first_name).each do |p| %>
			<option value="<%= p.id %>"><%= p.first_name %> <%= p.last_name %></option>
		<% end %>
  </select>		

	<div class="actions">
		<br/><br/>
	  <button type="submit" class="btn btn-primary">Save</button>
	</div>
<% end %>

<br/><br/>

